<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme.Launcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">#FF9A88</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize16dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    
    <style name="Widget.MaterialComponents.BottomNavigationView." parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox." parent="">
        <item name="fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.FilledBox." parent="">
        <item name="fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="CustomTab" parent="">
        <item name="fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="Widget.AppCompat.Toolbar." parent="">
        <item name="fontFamily">@font/lobster_regular</item>
        <item name="android:textSize">28dp</item>
    </style>

    <style name="Widget.AppCompat.Toolbar.." parent="">
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:textSize">28dp</item>
    </style>

    <style name="AlertDialogCustom" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:textColor">#F8AA9D</item>
        <item name="colorSurface">@color/white</item>
    </style>

</resources>