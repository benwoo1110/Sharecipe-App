<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sharecipe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF9A88</item>
        <item name="colorPrimaryDark">#FF9A88</item>
        <item name="colorPrimaryVariant">#F8AA9D</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F8AA9D</item>
        <item name="colorSecondaryVariant">#FF9A88</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="Theme.Sharecipe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Sharecipe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Sharecipe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>